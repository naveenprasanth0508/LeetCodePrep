class Solution {
public:
    bool searchMatrix(vector<vector<int>>& matrix, int target) {
       if(matrix.empty() || matrix[0].empty())
       return false;

       int m = matrix.size();
       int n = matrix[0].size();

       int r = 0;
       int c = n - 1;

       while(r < m && c >= 0){
        int v = matrix[r][c];
        if(v == target)
        return true;
        else if(v > target) 
        --c;
        else ++r;
       }
       return false;
    }
};
