#include <vector>
using namespace std;

class Solution {
public:
    void rotate(vector<vector<int>>& A) {
        int n = A.size();
        for (int i = 0; i < n; i++)
            for (int j = 0; j < i; j++)
                swap(A[i][j], A[j][i]);
        for (int i = 0; i < n; i++) {
            int a = 0, b = n - 1;
            while (a < b)
                swap(A[i][a++], A[i][b--]);
        }
    }
};
