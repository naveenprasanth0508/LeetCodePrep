class Solution {
public:
    bool checkDistances(string s, vector<int>& distance) {
        int first[26];
        fill(begin(first), end(first), -1);
        for(int i = 0; i < s.size(); i++) {
            int ch = s[i] - 'a';
            if(first[ch] == -1)
            first[ch] = i;
            else if (i - first[ch] -1 != distance[ch])
            return false;
        }
        
        return true;
    }
};
